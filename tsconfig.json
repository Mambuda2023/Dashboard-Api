{
	"compilerOptions": {
		"sourceMap": true,
		"target": "es2019",
		"experimentalDecorators": true,
		"module": "CommonJS",
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"outDir": "./dist",
		"rootDir": "src",
		"removeComments": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"strictPropertyInitialization": false,
		"skipLibCheck": true
	},
	"include": ["src/**/*", ".eslintrc.json"]
}
